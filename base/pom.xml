<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.perfmon4j</groupId>
		<artifactId>perfmon4j-project</artifactId>
		<version>${buildVersion}</version>	
	</parent>
  
	<artifactId>perfmon4j</artifactId>
	<name>perfmon4j</name>
	<packaging>jar</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
					          <manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<premain-class>org.perfmon4j.instrument.PerfMonTimerTransformer</premain-class>
							<Can-Redefine-Classes>true</Can-Redefine-Classes>
							<Boot-Class-Path>javassist.jar</Boot-Class-Path>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
					<configuration>
						<systemProperties>
							<property>
								<name>JAVASSIST_JAR</name>
								<value>${user.home}/.m2/repository/javassist/javassist/${javassist.version}/javassist-${javassist.version}.jar</value>
							</property>
							<property>
								<name>maven.runtime.classpath</name>
								<value>${maven.dependency.classpath}</value>
							</property>
							<property>
								<!--  This property ensures that ALL unit tests are run.... 
										Even those commented out for a local build -->
								<name>UNIT</name>
								<value>x</value>
							</property>
						</systemProperties>
					</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.5.3.0_1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
